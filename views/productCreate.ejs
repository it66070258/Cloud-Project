<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product - GIGAGADGET</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Prompt:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        body {
            font-family: "Prompt", sans-serif;
        }
    </style>
</head>

<body>
    <%- include('ownerNav')%>
        <div class="flex justify-center py-2">
            <div class="flex flex-col w-3/4">
                <div class="my-8 ms-2">
                    <div class="space-x-2">
                        <i class="fa-solid fa-box-open text-black text-3xl"></i>
                        <span class="text-black text-3xl font-bold">เพิ่มสินค้า</span>
                    </div>
                </div>
                <div class="flex flex-col items-center justify-center bg-gray-50/50 w-full rounded-lg p-8 py-9 border border-gray-200">
                    <form class="w-29/30 mx-auto p-6 space-y-6">
                        <div class="flex gap-15">
                            <!-- Left: ข้อมูลสินค้า -->
                            <div class="space-y-4 w-3/5">
                                <!-- ชื่อสินค้า -->
                                <div>
                                    <label class="block text-gray-700 font-medium mb-1" for="name">ชื่อสินค้า</label>
                                    <input type="text" id="name" name="name"
                                        class="w-full border border-gray-300 rounded-md py-2 px-3  focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white">
                                </div>

                                <!-- ราคา & จำนวน -->
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-gray-700 font-medium mb-1" for="price">ราคา</label>
                                        <input type="number" id="price" name="price"
                                            class="w-full border border-gray-300 rounded-md py-2 px-3  focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white"
                                            step="0.01">
                                    </div>
                                    <div>
                                        <label class="block text-gray-700 font-medium mb-1" for="quantity">จำนวน</label>
                                        <input type="number" id="quantity" name="quantity"
                                            class="w-full border border-gray-300 rounded-md py-2 px-3  focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white">
                                    </div>
                                </div>

                                <!-- คำอธิบายสั้น -->
                                <div>
                                    <label class="block text-gray-700 font-medium mb-1"
                                        for="shortDescription">คำอธิบาย</label>
                                    <textarea id="shortDescription" name="shortDescription" rows="2"
                                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white resize-none"></textarea>
                                </div>

                                <!-- รายละเอียด -->
                                <div>
                                    <label class="block text-gray-700 font-medium mb-1"
                                        for="description">รายละเอียด</label>
                                    <textarea id="description" name="description" rows="12"
                                        class="w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white resize-none"></textarea>
                                </div>
                            </div>

                            <!-- Right: รูปภาพ -->
                            <div class="space-y-4 w-2/5">
                                <!-- <label class="block text-gray-700 font-medium mb-1">รูปภาพสินค้า</label> -->
                                <!-- Preview รูป -->
                                 <div class="flex justify-center items-center flex-col">
                                    
                                    <div id="preview" class="flex flex-wrap my-5 flex-row justify-center items-center gap-2">
                                        <i class="fa-solid fa-image text-[20rem] text-gray-300"></i>
                                    </div>
                                    <label for="images" class="block w-1/2 border border-gray-400 rounded-md p-2 text-center cursor-pointer bg-white hover:bg-gray-50 hover:ring-2 hover:ring-teal-600">
                                        <span class="text-gray-600">เลือกภาพสินค้า</span>
                                        <input type="file" id="images" name="images" multiple accept="image/*"
                                            class="hidden" />
                                    </label>
                                 </div>
                                

                                <!-- หมวดหมู่ -->
                                <div>
                                    <label class="block text-gray-700 font-medium mb-1" for="category">หมวดหมู่</label>
                                    <select id="category" name="category"
                                        class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white">
                                        <option value="">หมวดหมู่</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </div>

                                <!-- แบรนด์ -->
                                <div>
                                    <label class="block text-gray-700 font-medium mb-1" for="brand">แบรนด์</label>
                                    <select id="brand" name="brand"
                                        class="w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-teal-600 bg-white">
                                        <option value="">แบรนด์</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </div>
                                
                            </div>
                        </div>

                        <!-- ปุ่มบันทึก -->
                        <div class="text-right">
                            <button type=""
                                class="text-gray-700 border border-gray-500 bg-white px-6 py-2 rounded-md hover:bg-gray-50 cursor-pointer">ยกเลิก</button>
                            <button type="submit"
                                class="bg-teal-600 text-white font-medium px-6 py-2 rounded-md hover:bg-teal-700 cursor-pointer">สร้างสินค้า</button>
                        </div>
                    </form>
                    <div class="col-span-full">
                    </div>
                </div>
            </div>


</body>
<script>
    const inputImages = document.getElementById('images');
    const preview = document.getElementById('preview');

    inputImages.addEventListener('change', () => {
        const files = Array.from(inputImages.files);
        if (files.length>0){
            console.log(files)
            preview.innerHTML = '';
            files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = e => {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = (index===0 ? 'w-full' : 'w-1/5') + ' aspect-[16/9] object-cover rounded-md';
                    preview.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
        }else{
            preview.innerHTML = '<i class="fa-solid fa-image text-[20rem] text-gray-300"></i>';
        }
    });
</script>

</html>